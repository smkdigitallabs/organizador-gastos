{
  "name": "organizador-de-gastos",
  "version": "1.0.0",
  "description": "Aplicativo para organizar gastos pessoais",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "web-build": "vite build",
    "preview": "vite preview",
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "latest",
    "vite": "^7.3.1"
  },
  "build": {
    "appId": "com.organizador.gastos",
    "productName": "Organizador de Gastos",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    }
  },
  "dependencies": {
    "@clerk/clerk-js": "^5.122.0",
    "@clerk/clerk-sdk-node": "^4.13.23",
    "@vercel/postgres": "^0.10.0",
    "dotenv": "^17.2.3",
    "pg": "^8.18.0"
  }
}
